@using Auth.Models.ViewModels;
@using Auth.Services;
@model JobProfileViewModel;
@inject IDropDownService dropdownservice;

@{
    var btnText = "";
    if (Model.isEdit)
    {
        ViewData["Title"] = "Edit ProfessionalBodies";
        btnText = "Update";
    }
    else
    {
        ViewData["Title"] = "Add ProfessionalBodies";
        btnText = "Save";
    }

}
<div class="card box-shadow m-2 p-5">
    <div class="card-body">
<form asp-action="AddProfessionalBodies">
    <div class="row">
        <div class="col">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="userID" type="hidden" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberSince" class="control-label"></label>
                <input asp-for="MemberSince" class="form-control" />
                <span asp-validation-for="MemberSince" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Qualifications" class="control-label"></label>
                <input asp-for="Qualifications" class="form-control" />
                <span asp-validation-for="Qualifications" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ongoing" /> @Html.DisplayNameFor(model => model.Ongoing)
                </label>
            </div>
        </div>

    
  
