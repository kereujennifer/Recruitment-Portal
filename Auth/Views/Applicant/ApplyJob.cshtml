@using Auth.Models.ViewModels;
@model ApplyJobViewModel

<h2>Apply for Job</h2>

<div class="card box-shadow m-2 p-5">
    <div class="card-body">
        <h4>@Model.JobTitle</h4>
        <h4>@Model.Employer</h4>
        <h4>@Model.Industry</h4>
        <h4></h4>


        <!-- Display other job details here -->

<form method="post">
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
    }

    <div class="form-group">
        <label asp-for="CoverLetter"></label>
        <textarea asp-for="CoverLetter"class="form-control" id="coverLetter" name="CoverLetter" rows="10"></textarea>
    </div>
            <div class="form-check">
                <input asp-for="Cv" class="form-check-input" type="checkbox" id="cv" name="Cv">
                <label class="form-check-label" asp-for="Cv">I have uploaded a Cv</label>
            </div>

    <button type="submit" class="btn btn-success">Submit Application</button>
            <input asp-for="JobId" type="hidden" />
            <input asp-for="JobTitle" type="hidden" />


        </form>
</div>
    </div>
   
