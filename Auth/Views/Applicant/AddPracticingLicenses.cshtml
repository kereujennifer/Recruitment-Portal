@using Auth.Models.ViewModels;
@using Auth.Services;
@model JobProfileViewModel;
@inject IDropDownService dropdownservice;

@{
    var btnText = "";
    if (Model.isEdit)
    {
        ViewData["Title"] = "Edit PracticingLicenses";
        btnText = "Update";
    }
    else
    {
        ViewData["Title"] = "Add Practicing Licenses";
        btnText = "Save";
    }

}
<div class="card box-shadow m-2 p-5">
    <div class="card-body">
<form asp-action="AddWorkExperience">
    <input asp-for="userID" type="hidden" />
    <div class="row">
        <div class="col">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issuer" class="control-label"></label>
                <input asp-for="Issuer" class="form-control" />
                <span asp-validation-for="Issuer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidFrom" class="control-label"></label>
                <input asp-for="ValidFrom" class="form-control" />
                <span asp-validation-for="ValidFrom" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="IssuedOn" class="control-label"></label>
                <input asp-for="IssuedOn" class="form-control" />
                <span asp-validation-for="IssuedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicenseNumber" class="control-label"></label>
                <input asp-for="LicenseNumber" class="form-control" />
                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidTo" class="control-label"></label>
                <input asp-for="ValidTo" class="form-control" />
                <span asp-validation-for="ValidTo" class="text-danger"></span>
            </div>
        </div>







        <div class="col-md-9 mb-2 d-flex justify-content-end mt-3">
            <a type="button" class="btn btn-outline-primary-2" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-primary-2 ms-2">@btnText</button>
        </div>
    </div>
</form>

</div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


