@model Auth.Models.ViewModels.Auth.RegisterVM;
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<partial name="_LogoHeaderPartial" />

<form method="post">
    <div class="form-group">
        <ion-icon name="person-outline"></ion-icon>
        <input class="form-control" asp-for="FullName" type="text" placeholder="Full Name" />
        <span class="text-danger" asp-validation-for="FullName"></span>
    </div>

    <div class="form-group">
        <input class="form-control" asp-for="Email" type="text" placeholder="Email" />
        <ion-icon name="mail-outline"></ion-icon>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <input class="form-control" asp-for="PhoneNumber" type="tel" placeholder="Phone Number" />
        <ion-icon name="call-outline"></ion-icon>
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group">
        <input class="form-control" asp-for="Password" type="password" placeholder="Password" />
        <ion-icon name="lock-closed-outline"></ion-icon>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" />
        <ion-icon name="lock-open-outline"></ion-icon>
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>

    <button class="btn primary w-100" type="submit">Sign Up</button>
    <p class="noAcc">Already have an account ? <a asp-action="Login"> Login </a></p>

</form>